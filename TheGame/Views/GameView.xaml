<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:control="clr-namespace:TheGame.Controls"
    xmlns:viewModel="clr-namespace:TheGame.ViewModels"
    x:Class="TheGame.Views.GameView"
    x:DataType="viewModel:GameViewModel"
    Title="GameView">
        <control:CardView
            WidthRequest="750"
            MinimumHeightRequest="550" >
            <StackLayout Orientation="Vertical">
            <Label
                Text="Welcome to the Fishing Game!"
                HorizontalOptions="Center"
                FontSize="Large"
                TextColor="Black"
                />
                <Label
                x:Name="ResultLabel"
                Text=""
                HorizontalOptions="Center"
                FontSize="Large"
                TextColor="Black"
                VerticalOptions="End"/>
            <Button
                Text="Cast your line!"
                Clicked="OnCastLineClicked"
                MaximumHeightRequest="50"
                MaximumWidthRequest="200" />
        </StackLayout>
        </control:CardView>
</ContentPage>